<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/paymentItemImage"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="CustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="27dp"
            android:id="@+id/paymentItemCustomerName" app:layout_constraintEnd_toStartOf="@+id/paymentItemImage"
            android:layout_marginEnd="33dp"/>
    <TextView
            android:text="MoneyAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="68dp"
            android:id="@+id/paymentItemMoneyAmount" app:layout_constraintEnd_toStartOf="@+id/paymentItemImage"
            android:layout_marginEnd="35dp"/>
    <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="27dp"
            android:id="@+id/paymentItemDate" app:layout_constraintEnd_toStartOf="@+id/paymentItemCustomerName"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
</android.support.constraint.ConstraintLayout>