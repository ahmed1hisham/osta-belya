<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                 xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                 android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/cardView">

        <android.support.constraint.ConstraintLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" tools:srcCompat="@tools:sample/avatars[8]"
                    android:id="@+id/worker_img"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="right"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="15dp"
                    app:layout_constraintStart_toEndOf="@+id/worker_name" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="9dp" app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="Worker Name"
                    android:textSize="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/worker_name"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/worker_img" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toTopOf="@+id/worker_salary"/>
            <TextView
                    android:text="100 LE"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/worker_salary"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/worker_name" android:layout_marginStart="108dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/worker_img" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>