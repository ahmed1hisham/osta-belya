<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.DetailedPaymentRequest"
        android:background="@drawable/img_background_res"
        android:paddingVertical="100dp"
android:paddingHorizontal="50dp">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
    android:background="@drawable/order_floating_background"
    android:paddingHorizontal="16dp">


    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" android:src="@drawable/ic_person_black_24dp"
            android:background="#35a785"
            android:id="@+id/detailedPaymentRequestIamge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="40dp"/>
    <TextView
            android:text="MechanicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:id="@+id/detailedPaymentRequestMechanicName" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/detailedPaymentRequestIamge"/>
    <TextView
            android:text="Order Details"
            android:layout_width="wrap_content"
            android:textColor="#000"

            android:layout_height="wrap_content"
            android:id="@+id/detailedPaymentRequestOrderDetails" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/detailedPaymentRequestMechanicName"/>
    <TextView
            android:text="MoneyAmount"
            android:textColor="#000"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailedPaymentRequestMoneyAmount"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/detailedPaymentRequestOrderDetails"
            app:layout_constraintStart_toStartOf="parent" />
    <TextView
            android:text="Date"
            android:textColor="#000"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailedPaymentRequestDate" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/detailedPaymentRequestMoneyAmount"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Pay"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:id="@+id/detailedPaymentRequestPayButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="32dp"/>
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>