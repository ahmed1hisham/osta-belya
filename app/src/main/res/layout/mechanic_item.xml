<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mer_name" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/mer_description"
            android:layout_marginEnd="69dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="33dp"
            android:layout_marginBottom="37dp" app:layout_constraintBottom_toTopOf="@+id/mer_location"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mer_description" app:layout_constraintEnd_toStartOf="@+id/mer_rating"
            android:layout_marginEnd="50dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="33dp"
            android:layout_marginBottom="37dp" app:layout_constraintBottom_toTopOf="@+id/mer_waiting"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mer_rating" android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/mer_category" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp" android:layout_marginEnd="75dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mer_location" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/mer_waiting"
            android:layout_marginEnd="69dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="459dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mer_waiting"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="459dp"
            app:layout_constraintEnd_toStartOf="@+id/mer_category" android:layout_marginEnd="50dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mer_category" android:layout_marginEnd="75dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="459dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@color/colorAccent"
            android:id="@+id/mer_image"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="548dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="88dp"
            android:layout_marginEnd="295dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="19dp"/>
</android.support.constraint.ConstraintLayout>