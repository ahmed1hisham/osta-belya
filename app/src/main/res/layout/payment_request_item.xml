<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
android:background="@drawable/order_floating_background"
android:layout_margin="20dp"
android:padding="20dp">

    <TextView
            android:text="Mechanic Name"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/paymentRequestMechanicName"
            app:layout_constraintStart_toStartOf="parent"  android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Money Amount"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"  android:layout_marginTop="10dp"
            android:id="@+id/paymentRequestMoneyAmount"
            app:layout_constraintTop_toBottomOf="@+id/paymentRequestMechanicName"/>
    <TextView
            android:text="Date"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paymentRequestDate" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/paymentRequestMoneyAmount"/>
</android.support.constraint.ConstraintLayout>