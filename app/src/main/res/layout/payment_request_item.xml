<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/cardView"

                                        android:layout_marginBottom="26dp"
                                        app:cardCornerRadius="20dp"
                                        android:layout_marginLeft="26dp"
                                        android:layout_marginRight="26dp" app:layout_constraintVertical_bias="0.0">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView
                    android:text="Mehcanic Name"
                    android:textSize="23dp"
                    android:layout_width="101dp"
                    android:layout_height="31dp"
                    android:id="@+id/paymentRequestMechanicName"
                    android:textColor="#0F1738"
                    android:layout_alignParentStart="true" android:layout_above="@+id/paymentRequestMoneyAmount"/>

            <TextView
                    android:text="Money Amount"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentRequestMoneyAmount"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/paymentRequestDate"/>

            <TextView
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/paymentRequestDate"
                    android:layout_centerHorizontal="true" android:layout_alignBottom="@+id/worker_image_iv"/>


            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/money_icon"
                    android:layout_alignBottom="@+id/paymentRequestMoneyAmount"
                    android:layout_toEndOf="@+id/paymentRequestMechanicName"/>


            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp" app:srcCompat="@drawable/img_default_3amala"
                    android:id="@+id/worker_image_iv"


                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp" android:layout_alignParentTop="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>