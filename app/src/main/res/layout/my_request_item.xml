<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="Request At:"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content" android:id="@+id/request_timing"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/r_mechanic_name"/>
    <TextView
            android:text="Mechanic Name"
            android:layout_width="wrap_content"
            android:textSize="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/r_mechanic_name"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Cancel"
            android:gravity="right"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="40dp" android:id="@+id/btn_cancel"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"/>

</android.support.constraint.ConstraintLayout>