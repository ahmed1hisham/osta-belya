<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MechanicSchedule">

    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="535dp"
            android:id="@+id/mechanicScheduleList"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/inc"/>
    <Button
            android:text="-"
            android:layout_width="83dp"
            android:layout_height="39dp"
            android:id="@+id/decre" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="55dp"
            app:layout_constraintEnd_toStartOf="@+id/incre" android:layout_marginEnd="116dp"/>
    <Button
            android:text="+"
            android:layout_width="89dp"
            android:layout_height="39dp"
            android:id="@+id/incre" android:layout_marginEnd="41dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/decre"/>
    <TextView
            android:text="Date Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Mechdate"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintStart_toEndOf="@+id/decre"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/incre"
            android:layout_marginEnd="8dp"/>

</android.support.constraint.ConstraintLayout>