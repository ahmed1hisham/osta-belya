<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
<android.support.v7.widget.CardView android:layout_width="match_parent"
                                    android:layout_height="72dp" app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/cardView"

                                    android:layout_marginBottom="26dp"
                                    app:cardCornerRadius="20dp"
                                    android:layout_marginLeft="26dp"
                                    android:layout_marginRight="26dp">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent">

        <TextView
                android:text="Worker Name"
                android:textSize="23dp"
                android:layout_width="101dp"
                android:layout_height="31dp"
                android:id="@+id/scheduleItemCustomerName"
                android:layout_marginLeft="102dp"
                android:layout_marginTop="20dp"
                android:textColor="#0F1738"
        />

        <TextView
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:id="@+id/scheduleItemSlot"
                android:text="2:30" android:layout_width="wrap_content"
                android:textAlignment="center" android:layout_alignParentStart="true" android:layout_marginStart="29dp"
                android:layout_alignParentBottom="true"/>

        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp" app:srcCompat="@drawable/img_default_3amala"
                android:id="@+id/customerItemImage"
                android:layout_marginLeft="221.32dp"
                android:layout_marginTop="6dp"
                tools:srcCompat="@tools:sample/avatars"
        />


    </RelativeLayout>

</android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>











