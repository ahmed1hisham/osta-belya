<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.UserHome"
        android:background="@drawable/img_background_res">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/mechanics_iv"
            android:onClick="mechanicsPressed"
            android:background="@drawable/circular_background"
            app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:src="@drawable/people_ic"
            android:padding="20dp"
    android:layout_marginEnd="50dp"/>

    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                 android:text="Mechanics"
                                                 android:textColor="#FFF"
                                                 android:gravity="center"
                                                 android:textSize="30sp"
                                                 android:fontFamily="bold"

    app:layout_constraintTop_toBottomOf="@id/mechanics_iv"
    app:layout_constraintEnd_toEndOf="@id/mechanics_iv"
    app:layout_constraintStart_toStartOf="@id/mechanics_iv"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/requests_iv"
            android:onClick="requestsPressed"
            android:background="@drawable/circular_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="150dp"
            android:layout_marginStart="50dp"
    android:src="@drawable/cars_ic"
    android:padding="15dp"/>

    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                                                 android:text="Requests"
                                                 android:textColor="#FFF"
                                                 android:gravity="center"
                                                 android:textSize="30sp"
                                                 android:fontFamily="bold"
                                                 app:layout_constraintTop_toBottomOf="@id/requests_iv"
                                                 app:layout_constraintEnd_toEndOf="@id/requests_iv"
                                                 app:layout_constraintStart_toStartOf="@id/requests_iv"/>


    <Button
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/paybtn"
            android:background="@drawable/paybtn"
            android:onClick="payRequestsPressed"
            app:layout_constraintTop_toBottomOf="@id/mechanics_iv"

            app:layout_constraintStart_toStartOf="@id/mechanics_iv"
    app:layout_constraintEnd_toEndOf="@id/mechanics_iv"
    android:layout_marginTop="70dp"/>

    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                 android:text="Pay"
                                                 android:textColor="#FFF"
                                                 android:gravity="center"
                                                 android:textSize="30sp"
                                                 android:fontFamily="bold"
                                                 app:layout_constraintTop_toBottomOf="@id/paybtn"
                                                 app:layout_constraintStart_toStartOf="@id/paybtn"
    app:layout_constraintEnd_toEndOf="@id/paybtn"/>


    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/walletBtn"
            android:background="@drawable/circular_background"
            app:layout_constraintTop_toBottomOf="@id/requests_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:layout_marginTop="70dp"
    android:src="@drawable/wallet_ic"
    android:padding="20dp"/>

    <android.support.v7.widget.AppCompatTextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                 android:text="Wallet"
                                                 android:textColor="#FFF"
                                                 android:gravity="center"
                                                 android:textSize="30sp"
                                                 android:fontFamily="bold"
                                                 app:layout_constraintTop_toBottomOf="@id/walletBtn"
                                                 app:layout_constraintStart_toStartOf="@id/walletBtn"
                                                 app:layout_constraintEnd_toEndOf="@id/walletBtn"/>

</android.support.constraint.ConstraintLayout>